program Strings {

    // A test program for handling strings.
    // Prints Hello in title case and upper case.

    char NULL = '\0';
    char NEWLINE = '\0';
    char Hello = "Hello\0";

    int length(char[] s) {
        int count = 0;
        while (s[count++] != NULL) {}
        return count-1;
    }

    char toUpperCase(char c) {
        if (c >= 'a' && c <= 'z') {
            return c - 'a' + 'A';
        } else {
            return c;
        }
    }

    void toUpperCase(char[] s) {
        int i = 0;
        while (i < length(s)) {
            s[i] = toUpperCase(s[i]);
            i += 1;
        }
    }

    void print(char[] s) {
        int i = 0;
        while ((c = s[i++]) != NULL) {
            output(c);
        }
    }

    void println(char[] s) {
        print(s);
        output(NEWLINE);
    }

    println("Hello\0");
    println(toUpperCase(Hello));
}